# Database Configuration
DB_SERVER=localhost
DB_NAME=HRPayrollSystem
DB_USER=sa
DB_PASSWORD=YourStrong@Password123

# JWT Configuration
JWT_SECRET_KEY=YourSecretKeyHere-ChangeInProduction-MinimumLength32Characters
JWT_ISSUER=HRPayrollSystem
JWT_AUDIENCE=HRPayrollSystem
JWT_EXPIRATION_MINUTES=480

# LDAP/AD Configuration
LDAP_SERVER=ldap://your-ad-server
LDAP_PORT=389
LDAP_BASE_DN=DC=example,DC=com
LDAP_USE_SSL=false

# Email Configuration
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USE_SSL=true
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=HR Payroll System
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password

# Encryption Configuration
ENCRYPTION_KEY=YourEncryptionKeyHere-ChangeInProduction-32Chars
ENCRYPTION_IV=YourIVHere-16Chars

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
